/* pages/searchName/searchName.wxss */
.searchNameNav{
  padding-right: 20rpx;
  flex-shrink: 0;
}
.searchContent{
  display: flex;
  flex:1;
  padding: 30rpx;
  justify-content: space-between;
  align-items: center;
  height: 200rpx;
  background: #fff;
}
.basicInfo{
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding-left: 30rpx;
}
.searchLeft{
  display: flex;
  flex-shrink: 0;
}

.basicInfoName{
  font-size: 36rpx;
}
.basicInfoMore{
  display: flex;
}
.basicInfoMoreFont{
  font-size: 30rpx;
  display: flex;
  align-items: center;
}
.basicInfoMoreFont:last-child{
  margin-left: 20rpx;
}
.searchRight{
  width: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.searchRight .rankImg{
  width: 100rpx;
  height: 100rpx;
}
.searchRight .rankImg>image{
  width: 100%;
  height: 100%;
}

.rankInfo{
  display: flex;
  margin-top: 20rpx;
  background: #fff;
  padding: 20rpx 0;
}
.rankInfo .rankInfoBox{
  flex:1;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 26rpx;
}
.rankInfoNum{
  font-size: 40rpx;
  margin-bottom: 12rpx;
}

.rankRecord{
  display: flex;
  border-bottom: 1rpx solid var(--gray);
}
.rankRecord:last-child{
  border-bottom:0;
}
.rankRanking{
  flex-shrink: 0;
  font-size: 40rpx;
  width: 60rpx;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}
.rankRankingGreen{
  background: var(--green);
}
.rankRankingBlue{
  background: var(--blue);
}
.rankRankingGrey{
  background: var(--grey);
}
.rankRecordDetail{
  flex:1;
  padding: 30rpx 0;
  padding-left: 20rpx;
}

.fettersIconList{
  margin-bottom: 20rpx;
}

.fettersIconBasic{
  width: 40rpx;
  height: 40rpx;
}
.fettersIconBasic >image{
  width: 30rpx;
  height: 30rpx;
}
.hexoIconBasic{
  width: 50rpx;
  height: 50rpx;
}
.hexoIconBasic>image{
  width: 50rpx;
  height: 50rpx;
  border-radius: 5rpx;
}
.matchTime{
  flex-shrink: 0;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  justify-content: center;
  font-size: 20rpx;
}
.searchAllIcon{
  width: 80rpx;
  flex-shrink: 0;
  position: relative;
}
.searchAllIcon>.cuIcon-unfold{
  right: 30rpx;
  font-size: 28rpx;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
}
.rankRecordList{
  margin-top: 20rpx;
  background: #fff;
}
.rankRecordListBox{
  overflow: auto;
}

.searchBox{
  display: flex;
  flex-direction: column;
  overflow: hidden;
  height: 100vh;
}

.searchBoxContent{
  overflow: auto;
}